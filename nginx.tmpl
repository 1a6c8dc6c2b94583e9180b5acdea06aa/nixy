user www-data;
worker_processes auto;
pid /run/nginx.pid;

events {
    worker_connections 1024;
}
http {
    server {
        listen       7000 default_server;
        server_name  _;
        # Everything is a 503
        location / {
            return 503;
        }
    }

{{range $app, $tasks := .}}
    upstream {{$app}} {
        {{ range $tasks.Tasks}}server {{ . }};
    {{end}}}
    server {
        listen 7000;
        server_name {{$app}} {{$app}}.*;
        location / {
            proxy_set_header HOST $host;
            proxy_next_upstream error timeout invalid_header http_500;
            proxy_connect_timeout 20;
            proxy_pass http://{{$app}};
        }
    }
{{end}}
}
